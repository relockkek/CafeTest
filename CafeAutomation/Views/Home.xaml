<Page x:Class="CafeAutomation.Views.Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:vm="clr-namespace:CafeAutomation.ViewModels"
      xmlns:conv="clr-namespace:CafeAutomation.Converters"
      Title="Главная">

    <Page.Resources>
        <conv:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
    </Page.Resources>

    <Page.DataContext>
        <vm:HomeMVVM/>
    </Page.DataContext>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="60">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <TextBlock Grid.Row="0"
                       Text="Добро пожаловать!"
                       FontSize="36"
                       FontWeight="Bold"
                       Foreground="{StaticResource TextBrush}"
                       HorizontalAlignment="Center"
                       Margin="0,10,0,40"/>

            <!-- Загрузка -->
            <TextBlock Grid.Row="1"
                       Text="Загрузка данных..."
                       FontSize="18"
                       FontWeight="SemiBold"
                       Foreground="Gray"
                       HorizontalAlignment="Center"
                       Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibility}}"
                       Margin="0,0,0,30"/>

            <!-- Контент -->
            <UniformGrid Grid.Row="2"
                         Columns="2"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Top"
                         MaxWidth="1100"
                         Margin="0,0,0,40">

                <!-- Карточка: Выручка -->
                <Border Style="{StaticResource CardBorderStyle}"
                        Margin="20" Padding="30" MinHeight="160" MinWidth="320" CornerRadius="16">
                    <StackPanel>
                        <TextBlock Text="Выручка за сегодня:"
                                   FontSize="20"
                                   FontWeight="SemiBold"
                                   TextWrapping="Wrap"/>
                        <TextBlock Text="{Binding TodayRevenue}"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource TextBrush}"
                                   Margin="0,10,0,0"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <!-- Карточка: Заказы -->
                <Border Style="{StaticResource CardBorderStyle}"
                        Margin="20" Padding="30" MinHeight="160" MinWidth="320" CornerRadius="16">
                    <StackPanel>
                        <TextBlock Text="Количество заказов за сегодня:"
                                   FontSize="20"
                                   FontWeight="SemiBold"
                                   TextWrapping="Wrap"/>
                        <TextBlock Text="{Binding OrdersCount}"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource TextBrush}"
                                   Margin="0,10,0,0"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <!-- Карточка: Популярное блюдо -->
                <Border Style="{StaticResource CardBorderStyle}"
                        Margin="20" Padding="30" MinHeight="160" MinWidth="320" CornerRadius="16">
                    <StackPanel>
                        <TextBlock Text="Популярное блюдо:"
                                   FontSize="20"
                                   FontWeight="SemiBold"
                                   TextWrapping="Wrap"/>
                        <TextBlock Text="{Binding PopularDish}"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource TextBrush}"
                                   Margin="0,10,0,0"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <!-- Карточка: Столы -->
                <Border Style="{StaticResource CardBorderStyle}"
                        Margin="20" Padding="30" MinHeight="160" MinWidth="320" CornerRadius="16">
                    <StackPanel>
                        <TextBlock Text="Загруженность столов:"
                                   FontSize="20"
                                   FontWeight="SemiBold"
                                   TextWrapping="Wrap"/>
                        <TextBlock Text="{Binding TablesStatus}"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource TextBrush}"
                                   Margin="0,10,0,0"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>
            </UniformGrid>
        </Grid>
    </ScrollViewer>
</Page>
