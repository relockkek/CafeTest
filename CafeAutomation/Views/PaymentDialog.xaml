<Window x:Class="CafeAutomation.Views.PaymentDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Оплата"
        Height="420" Width="550"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F8F9FA">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Основной блок -->
        <StackPanel>
            <TextBlock Text="Детали заказа:"
                       FontSize="16"
                       FontWeight="SemiBold"
                       Margin="0,0,0,5"/>

            <ScrollViewer Height="150" VerticalScrollBarVisibility="Auto">
                <TextBlock Text="{Binding OrderDetails}"
                           TextWrapping="Wrap"
                           FontSize="14"
                           Foreground="Black"/>
            </ScrollViewer>

            <TextBlock Text="Метод оплаты:"
                       FontSize="16"
                       FontWeight="SemiBold"
                       Margin="0,20,0,5"/>
            <ComboBox ItemsSource="{Binding PaymentMethods}"
                      SelectedItem="{Binding SelectedMethod}"
                      FontSize="14"
                      Height="35"
                      Margin="0,0,0,10"/>
        </StackPanel>

        <!-- Кнопки -->
        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            <Button Content="Оплатить"
                    Width="120" Height="40"
                    Background="LightGreen"
                    FontSize="14" FontWeight="Bold"
                    Click="Pay_Click"
                    Margin="0,0,10,0"/>
            <Button Content="Отмена"
                    Width="120" Height="40"
                    Background="#E0E0E0"
                    FontSize="14" FontWeight="Bold"
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
