<Page x:Class="CafeAutomation.Views.MenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:vm="clr-namespace:CafeAutomation.ViewModels"
      Title="Меню">

    <Page.DataContext>
        <vm:DishesMVVM />
    </Page.DataContext>

    <Page.Resources>
        <DropShadowEffect x:Key="DropShadowEffect"
                          BlurRadius="8"
                          ShadowDepth="2"
                          Opacity="0.2"/>
    </Page.Resources>

    <Grid Margin="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0"
                   Text="Управление меню"
                   FontSize="36"
                   FontWeight="Bold"
                   Foreground="Black"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,40"/>

        <!-- Категории -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Categories}" HorizontalAlignment="Center">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"
                                   HorizontalAlignment="Center"
                                   MaxWidth="1300"
                                   ItemWidth="320"
                                   ItemHeight="370"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="10" HorizontalAlignment="Center">
                            <Button Width="300" Height="300"
                                    Tag="{Binding Name}"
                                    Click="Category_Click"
                                    Cursor="Hand"
                                    BorderThickness="0"
                                    Padding="0"
                                    Background="Transparent">
                                <Border CornerRadius="16"
                                        ClipToBounds="True"
                                        Effect="{StaticResource DropShadowEffect}">
                                    <Image Source="{Binding ImagePath}"
                                           Stretch="UniformToFill"
                                           HorizontalAlignment="Stretch"
                                           VerticalAlignment="Stretch"/>
                                </Border>
                            </Button>

                            <!-- Название категории -->
                            <TextBlock Text="{Binding Name}"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       HorizontalAlignment="Center"
                                       Margin="0,10,0,0"/>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>
