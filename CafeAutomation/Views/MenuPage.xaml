<Page x:Class="CafeAutomation.Views.MenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:vm="clr-namespace:CafeAutomation.ViewModels"
      Title="Меню">

    <!-- DataContext теперь устанавливается только в C# -->

    <Grid Margin="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Управление меню"
                   FontSize="36"
                   FontWeight="Bold"
                   Foreground="{StaticResource TextBrush}"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,40"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Categories}"
                          HorizontalContentAlignment="Center">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"
                                   HorizontalAlignment="Center"
                                   MaxWidth="1200"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Width="200" Height="220"
                                Margin="15"
                                Tag="{Binding Name}"
                                Click="Category_Click"
                                Cursor="Hand"
                                Background="White"
                                BorderBrush="#DDD"
                                BorderThickness="1">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Image Source="{Binding ImagePath}"
                                       Width="80" Height="80"
                                       Margin="0,10"
                                       Stretch="Uniform"/>
                                <TextBlock Text="{Binding Name}"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           TextAlignment="Center"
                                           TextWrapping="Wrap"
                                           Margin="0,10,0,0"/>
                            </StackPanel>
                        </Button>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>
